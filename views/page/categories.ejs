<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <%- include('../layout/head.ejs'); %>
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
            font-size: 3.5rem;
            }
        }
    </style>
    <title>Document</title>
</head>
<body>

    <!-- Header Section -->
    <%- include('../layout/header.ejs') %> 

    <!-- Landing Section -->
    <section>
        <%- include('../widget/landing.ejs') %> 
    </section>

    <main>

        <!-- Categories Section -->
        <div class="container px-4 py-5">
            <header class="d-flex justify-content-between border-bottom align-items-center">
                <h2 class="pb-2">Categories</h2>
                <!-- <a href=""><span class="text-end d-block text-primary">View All</span></a> -->
            </header>
            <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
                <% for( let index = 0; index < categories.length; index++ ) { %>
                    <div class="list-group">
                        <a href="/products/categories/<%= categories[index] %>" class="list-group-item list-group-item-action"><%= categories[index] %></a>
                    </div>
                <% } %>
            </div>
        </div>

    </main>
    
    <!-- Footer Section -->
    <%- include('../layout/footer.ejs'); %>
    
    <!-- Script File -->
    <%- include('../layout/script.ejs'); %>
</body>
</html>